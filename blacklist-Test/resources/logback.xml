<configuration>

    <!-- For debugging logback configuration -->
    <!-- <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" /> -->

    <!-- Read in configuration parameters -->
    <property resource="logback.properties" />

    <property name="pattern"
              value="> %-5level %date{HH:mm:ss.SSS} %thread %logger%n  %msg%n" />

    <!-- Configure the log messages that are logged to console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <!-- Configure file appender -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${log.filename}</file>
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>

        <param name="Append" value="false" />
    </appender>

    <!-- Configure Email appender -->
    <appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">

        <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
            <marker>NOTIFY_ADMIN</marker>
        </evaluator>

        <smtpHost>${email.smtphost}</smtpHost>
        <to>${email.destination}</to>
        <from>${email.from}</from>
        <subject>${email.subject}</subject>

        <layout class="ch.qos.logback.classic.html.HTMLLayout">
            <pattern>%level%date%logger{50}%msg</pattern>
        </layout>

        <!-- Eliminate trace messages - might want to remove this -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>

    </appender>

    <!-- Enable logging Tallac' trace messages (disabled by default) -->
    <logger name="com.tallac">
        <level value="INFO" />
    </logger>

    <logger name="com.tallac.blacklist.module">
        <level value="INFO" />
    </logger>

    <logger name="LogService">
        <level value="ERROR" />
    </logger>

    <!-- Limit verbose DeviceMgr messages -->
    <logger name="com.tallac.blacklist.module.DeviceMgr">
        <level value="INFO" />
    </logger>

    <!-- Limit verboseFlowMgr messages -->
    <logger name="com.tallac.blacklist.module.FlowMgr">
        <level value="INFO" />
    </logger>

    <!-- Limit blacklist.api messages -->
    <logger name="com.tallac.blacklist.api">
        <level value="INFO" />
    </logger>

    <!-- Limit verbose MessageListener messages -->
    <logger name="com.tallac.blacklist.module.MessageListener">
        <level value="INFO" />
    </logger>

    <!-- Limit floodlight messages -->
    <logger name="net.floodlightcontroller">
        <level value="INFO" />
    </logger>

    <!-- Limit RESTlet messages -->
    <logger name="org.restlet">
        <level value="INFO" />
    </logger>

    <!-- Attach appenders to root logger -->
    <root>
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="EMAIL" />
        <appender-ref ref="FILE" />
    </root>

</configuration>
